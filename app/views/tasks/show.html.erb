<div class="mx-auto max-w-3xl text-center">
    <h1 class="font-bold text-3xl"><%= @task.title %></h1>
    <h4 class="font-bold">rating: <%= @task.details %></h4>
    <h6 class="text-gray-400 text-sm"><%= @task.completed %></h6>
    <%= link_to 'edit', edit_task_path(@task.id) %>
    <%= link_to 'Go back to list', tasks_path%>
    <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>
